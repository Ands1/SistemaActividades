<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Total cost</th>
      <th>Activity Type</th>
      <th>Initial date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.id %></td>
        <td><%= activity.name %></td>
        <td><%= activity.description %></td>
        <td><%= activity.location %></td>
        <td><%= activity.total_cost %></td>
        <td><%= activity.type_activity%></td>
        <td><%= activity.initial_date %></td>
        <td><%= activity.end_date %></td>

        
        <td><%= link_to 'Show', activity %></td>

        <% if can? :update, activity %>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <%end%>
        
        
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
        

      </tr>
    <% end %>
  </tbody>
</table>

<br>

