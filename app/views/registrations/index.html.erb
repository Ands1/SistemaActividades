<h1>Usuarios registrados</h1>

<table class='table'>
  <thead>
    <tr>
      <th class="">First name</th>
      <th class="">Last name</th>
      <th class="">Username</th>
      <th class="">Email</th>
      <th class="">Roles</th>

      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class=""><%= user.first_name %></td>
        <td class=""><%= user.last_name %></td>
        <td class=""><%= user.username %></td>
        <td class=""><%= user.email %></td>
        <td class=""><%= user.role %></td>

        <td><%= link_to 'Show'%></td>
        
        <% if can? :update, user %>
        <td><%= link_to 'Edit', edit_registration_path(user)%></td>
        <%end%>
        <% if can? :destroy, user %>
        <td><%= link_to 'Destroy'%></td>
        <%end%>

        
      </tr>
    <% end %>
  </tbody>
</table>

<br>