<p id="notice"><%= notice %></p>

<h1>Activity Notes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_notes.each do |activity_note| %>
      <tr>
        <td><%= activity_note.comment %></td>
        <td><%= link_to 'Show', activity_note_url(:id => activity_note.id) %></td>
        <td><%= link_to 'Edit', edit_activity_note_path(:id => activity_note.id) %></td>
        <td><%= link_to 'Destroy', activity_note_path(activity_note.activity, activity_note), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity Note', new_activity_note_path %>
<%= link_to 'Back', activities_path %>
